<Window x:Class="SimpleSnakeGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleSnakeGame"
        mc:Ignorable="d"
        Title="Moon Snake Game" Height="540" Width="660" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">
    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="Document">
                    <MenuItem Name="MenuFile_NewGame" Header="New Game"/>
                    <Separator/>
                    <MenuItem Name="MenuFile_Exit" Header="Exit"/>
                </MenuItem>
                <MenuItem Header="Control">
                    <MenuItem Name="MenuControl_Pause" Header="Pause"/>
                </MenuItem>
                <MenuItem Header="Help">
                    <MenuItem Name="MenuHelp_About" Header="About"/>
                </MenuItem>
            </Menu>
            <Canvas x:Name="myCanvas" Height="480" Width="640" Background="#222222" Focusable="True" />

        </DockPanel>
    </Grid>
</Window>
